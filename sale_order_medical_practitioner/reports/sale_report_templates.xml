<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_practitioner" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[hasclass('page')]//div[hasclass('row')]" position="after">
            <div t-if="doc.practitioner_id" class="row mt-4">
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>Practitioner:</strong>
                    <p class="m-0" t-field="doc.practitioner_id"/>
                    <p t-if="doc.practitioner_id.specialty_ids" class="m-0">
                        <strong>Specialties:</strong>
                        <span t-esc="', '.join(doc.practitioner_id.specialty_ids.mapped('name'))"/>
                    </p>
                </div>
            </div>
        </xpath>
    </template>
</odoo>